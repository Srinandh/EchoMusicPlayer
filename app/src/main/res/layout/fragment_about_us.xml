<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9b2a58"
    android:clickable="true"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/echo_logo"
        android:layout_marginTop="100dp"
        android:id="@+id/about_us_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="This app is made by Srinandh Ramidi as a part of Internshala's online training project."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Version:1.0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="21sp"/>

</LinearLayout>